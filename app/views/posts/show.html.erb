<h1> <%= @post.title %> </h1>
<p> <%= @post.description %> </p>

<%= image_tag @post.image_url rescue nil %>

<ul>
  <% if (@post.user_id.present?) && (@post.user_id == current_user.id) %>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Destroy', 
        @post, method: :delete, data: { confirm: 'Are you sure you want to delete this @post?' } %>
        <%= link_to 'Back', @posts_path %>
  <% end %>
</ul>
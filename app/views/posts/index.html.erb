
<h1> Post Index </h1>

<table border="2px">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>User</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= image_tag post.image_url rescue nil %></td>
        <td><%= post.user.email rescue nil %></td>
        <td><%= link_to 'Show', post %>
        <% if (post.user_id.present?) && (post.user_id == current_user.id) %>
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', 
        post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
        <%= link_to 'Back', posts_path %>
      <% end %>
      </tr>
   <% end %>
  </tbody>
</table>

<br>

<button> <%= link_to 'New Post', new_post_path %></button>


<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>